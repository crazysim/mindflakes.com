!!!
/[if IE 8] <html class="no-js lt-ie9" lang="en">
<!--[if gt IE 8]><!-->
%html.no-js{lang: 'en'}<>
  <!--<![endif]-->
  %head
    %meta{:charset => 'utf-8'}/
    %meta{:content => 'width=device-width', :name => 'viewport'}/
    %title
      = " #{@item[:title]} #{'-' if @item[:title]} Mindflakes"
    %link{rel: 'alternate', type: 'application/atom+xml', href: '/blog/atom.xml'}
    %link{:href => '/assets/stylesheets/normalize.css', :rel => 'stylesheet'}/
    %link{:href => '/assets/stylesheets/app.css', :rel => 'stylesheet'}/
    %script{:src => '/assets/javascripts/foundation/vendor-custom-modernizr.js'}
  %body
    %nav.top-bar
      %ul.title-area
        %li.name
          %h1
            %a{href: '/'}
              Mindflakes
        %li.toggle-topbar.menu-icon
          %a{href: '#'}
            %span Menu
      %section.top-bar-section
        %ul.right
          %li
            %a{href: '/blog/'} Blog
          %li
            %a{href: '/blog/archives/'} Archives

    = yield
    .row
      .large-12.columns
        %hr
        :markdown
          Nelson Chen 2013
    :javascript
      document.write('<script src=' +
      ('__proto__' in {} ? '/assets/javascripts/foundation/vendor-zepto' : '/assets/javascripts/foundation/vendor-jquery') +
      '.js><\/script>')
    %script{:src => '/assets/javascripts/foundation.js'}
    :javascript
      $(document).foundation();
